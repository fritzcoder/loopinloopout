<% content_for :profile do %>
 <%= render :partial => "layouts/profile", :locals => { :user => @user_name } %>
<% end %>
<% content_for :title do %>
<%= @user_name %>
<% end %>
<div class="page">
	<ul class="nav nav-tabs">
		<li id="tab_bank" class="active">
		    <a href="/<%= @user_name %>"><i class="icon-info-sign"></i> Info</a>
		</li>
		<li id="tab_browse">
			<a href="/<%= @user_name %>/banks/browse"><i class="icon-fire"></i> Activity</a>
		</li>
	</ul>
	<h3><a href="">Projects:</a> <%= @user.luser_projects_count %> <a href="">Banks:</a> <%= @user.luser_banks_count %> </h3> 
	<button class="btn btn-mini btn-primary" type="button" id="edit">Edit</button>
	<div id="edit_profile" style="display:none;">
		<%= render 'lusers/form' %>
	</div>
	<div id="profile">
		<div style="float:left;width:250px;">
		<h3>
			<% if @luser.location != nil and @luser.location != ""%>
			<%= @luser.location %>
			<% else %>
			Unknown Location
			<% end %>
		</h3>	
		<h4>About:</h4>
		<% if @luser.about != nil and @luser.about != ""%>
		<p><%= @luser.about %> </p>
		<% else %>
		Not entered
		<% end %>
		
		</div>
		<div style="float:left;width:250px;margin-left: 10px;">
			<h4>Gear and Wares:</h4>
			<% if @luser.gear != nil and @luser.gear != ""%>
			<%= @luser.gear %>
			<% else %>
			Gear list not specified
			<% end %>
			<h4>Battle Station:</h4>
			<% if @luser.battle_station_file_name != nil%>
			<a href="">
				<img src="http://127.0.0.1:3000<%= @user.battle_station.url(:medium) %>" />
			</a>
			<% else %>
			<a href="">
				<img src="http://127.0.0.1:3000/assets/workstation_profile.jpg" />
			</a>
			<% end %>
		</div>
		<div style="float:left;width:240px;margin-left: 10px;">
		    <h4>Following:</h4>
			<div>
				<%= render :partial => 'following', :locals => { :following => @following } %>
			</div>
			<h4>Followers:</h4>
			<div>
				<%= render :partial => 'followers', :locals => { :followers => @followers } %>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
$(document).ready(function() {
	$('#edit').click(function() {
	  	$('#edit_profile').toggle('slow', function(){});
		$('#profile').toggle('slow', function(){});
	});
});
</script>
