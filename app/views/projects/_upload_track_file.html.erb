<%= form_for(@sound_file, :url => "/" + @user_name + "/projects/" + @project.id.to_s + "/upload_file") do |f| %>
  <% if @sound_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sound_file.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @sound_file.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div style="border: 1px solid black;padding:10px;">
  <%= f.hidden_field :type, :value => type %>
  <div>
    <%= f.label :track_part %>
    <%= f.text_field :track_part %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 3 %>
  </div>
  <div>
    <%= f.label :file %>
    <%= f.file_field :file%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>