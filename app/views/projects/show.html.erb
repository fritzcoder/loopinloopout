<div class="page">	
<div>
<h1> 
    <%= @project.name %> 
	<span class="label label-info"><%= @project.type %></span>
	<% if @project.access == "public" %>
	<span class="label label-success"><%= @project.access %></span>
	<% else %>
	<span class="label label-important"><%= @project.access %></span>
	<% end %>
</h1>
<p><%= @project.description %></p>
<h4><small>Created by: <%= @project.created_by %></small></h4>
<ul class="nav nav-tabs">
	<li id="tab_project" class="active">
	    <a href="">Project</a>
	</li>
	<li id="tab_collabs">
		<a href="">Discussion</a>
	</li>
	<li id="tab_settings">
		<a href="">Settings</a>
	</li>
</ul>
</div>
<div>
	<%= render 'layouts/small_player' %>
</div>
<br />
<% if @project.type == "Collaboration"%>
<%= render 'collaboration' %>
<% elsif @project.type == "Remix" %>
<%= render 'remix' %>
<% else %>
<%= render 'project' %>
<% end %>
</div>