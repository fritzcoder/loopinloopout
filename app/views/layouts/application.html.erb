<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= content_for?(:title) ? yield(:title) : "LoopinLoopout" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body style="background-color: #000">
    <header class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container" style="background-color:#666;padding:2px;">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
			<div class="span2">
				<% if user_signed_in? and current_user.luser != nil %>
				<ul class="nav nav-tabs nav-stacked" style="background-color:#838B8B">
			    	<li><a href="/<%= current_user.luser.name %>/banks" style="color: #000"><i class="icon-briefcase"></i> Banks</a></li>
			        <li><a href="#" style="color: #000"><i class="icon-headphones"></i> Projects</a></li>
					<li><a href="#" style="color: #000"><i class="icon-fire"></i> Activity</a></li>
			    </ul>
				<% end %>
			</div>
            <div class="span10" style="background-color: #838B8B; margin-left:10px;">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div>
 	  <!--! end of .container -->
    </div> <!--! end of #main -->
	<div class="container" style="background-color:#666;padding:2px;margin-top:15px;">
    </div>
  </body>
</html>
