<script type="text/javascript">
    $(document).ready(function(){
      $("#jquery_jplayer_1").jPlayer({
        ready: function () {
          $(this).jPlayer("setMedia", {
            mp3: ""
          });
        },
        supplied: "mp3"
      });
    });

	function play()
	{
		$("#jquery_jplayer_1").jPlayer("play");
	}
	
	function stop()
	{
		$("#jquery_jplayer_1").jPlayer("stop");
	}
	
	function pause()
	{
		$("#jquery_jplayer_1").jPlayer("pause");
	}
	
	function playFile(url, wave, title)
	{
		$("#title").html(title)
		$("#wave").attr('style', "background:url('http://127.0.0.1:3000" + wave + "') 0 0 no-repeat;width:300px;height:19px;")
		$("#jquery_jplayer_1").jPlayer( "stop" );
		$("#jquery_jplayer_1").jPlayer( "destroy" );
		$("#jquery_jplayer_1").jPlayer({
	        ready: function () {
			  //alert(url);
	          $(this).jPlayer("setMedia", {
	            mp3: "http://127.0.0.1:3000/" + url
	          }).jPlayer("play");
	        },
			supplied: "mp3"
	     });	 
		//});
	}
</script>
